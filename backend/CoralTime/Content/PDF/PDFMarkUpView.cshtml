@using CoralTime.Common.Constants
@using CoralTime.DAL.ConvertModelToView
@model CoralTime.ViewModels.Reports.Responce.Export.ReportExportPDFView

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="@Model.PatchCssStyle">
</head>
<body>
<div class="divIncludeTable">
    <table class="tableEntityHeaders">
        <tr>
            <td>
                <span>@Model.ReportTotalView.PeriodCell.DisplayNamePeriod</span>
                <span>@Model.ReportTotalView.PeriodCell.DisplayNamePeriodValue</span>
            </td>
        </tr>
    </table>
</div>
@foreach (var groupedItems in Model.ReportTotalView.GroupedItems)
{
    <div class="divIncludeTable">
        <table class="tableEntityHeaders">
            <thead>
                <tr class="rowCommonEntityHeaders containerFlex">
                    <td class="columnCommonEntityHeaders childFlexLeft">
                        <span class="spanCommonEntityHeaders">@groupedItems.GroupByType.GroupByTypeDisplayName?.ToUpper()@groupedItems.GroupByType.GroupByTypeDisplayNameValue?.ToUpper()</span>
                    </td>
                </tr>
            </thead>
        </table>
        <table class="tableNestedHeaders">
            <thead>
                <tr style="border: 1px solid black;" class="rowNestedEntityHeaders">
                    @if (groupedItems.DisplayNameDate != null)
                    {
                    <td>
                        <span>@groupedItems.DisplayNameDate</span>
                    </td>
                    }
                    @if (groupedItems.DisplayNameClient != null)
                    {
                    <td>
                        <span>@groupedItems.DisplayNameClient</span>
                    </td>
                    }
                    @if (groupedItems.DisplayNameProject != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameProject</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameMember != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameMember</span>
                        </td>
                    }
                    <td>
                        <span>@groupedItems.DisplayNameTask</span>
                    </td>
                    @if (groupedItems.DisplayNameTimeFrom != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameTimeFrom</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameTimeTo != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameTimeTo</span>
                        </td>
                    }
                    <td>
                        <span>@groupedItems.DisplayNameTimeActual</span>
                    </td>
                    @if (groupedItems.DisplayNameTimeEstimated != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameTimeEstimated</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameNotes != null)
                    {
                        <td>
                            <span>@groupedItems.DisplayNameNotes</span>
                        </td>
                    }
                </tr>
            </thead>
            <tbody>
            @foreach (var entityRow in groupedItems.Items)
            {
                <tr style="max-width: 500px;">
                    @if (groupedItems.DisplayNameDate != null)
                    {
                        <td>
                            <span>@ConvertModelToView.UpdateDateFormat(entityRow.Date, Model.ReportTotalView.DateFormatId)</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameClient != null)
                    {
                        <td>
                            <span>@entityRow.ClientName</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameProject != null)
                    {
                        <td>
                            <span>@entityRow.ProjectName</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameMember != null)
                    {
                        <td>
                            <span>@entityRow.MemberName</span>
                        </td>
                    }
                    <td>
                        <span>@entityRow.TaskName</span>
                    </td>
                    @if (groupedItems.DisplayNameTimeFrom != null)
                    {
                        <td>
                            <span>@(entityRow.TimeValues.TimeFrom == 0 ? null : ConvertModelToView.UpdateTimeFormatForValue(entityRow.TimeValues.TimeFrom.ToString()))</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameTimeTo != null)
                    {
                        <td>
                            <span>@(entityRow.TimeValues.TimeTo == 0 ? null : ConvertModelToView.UpdateTimeFormatForValue(entityRow.TimeValues.TimeTo.ToString()))</span>
                        </td>
                    }
                    <td>
                        <span>@ConvertModelToView.UpdateTimeFormatForValue(entityRow.TimeValues.TimeActual.ToString())</span>
                    </td>
                    @if (groupedItems.DisplayNameTimeEstimated != null)
                    {
                        <td>
                            <span>@(entityRow.TimeValues.TimeEstimated == 0 ? null : ConvertModelToView.UpdateTimeFormatForValue(entityRow.TimeValues.TimeEstimated.ToString()))</span>
                        </td>
                    }
                    @if (groupedItems.DisplayNameNotes != null)
                    {
                        <td>
                            <span>@entityRow.Notes</span>
                        </td>
                    }
                </tr>
            }
            <tr>
                <td style="text-align: left;">
                    <span class="spanCommonEntityHeaders">@groupedItems.TimeTotalFor.DisplayNameTimeActualTotalFor.ToUpper()@groupedItems.GroupByType.GroupByTypeDisplayNameValue.ToUpper()</span>
                </td>
                @if (groupedItems.DisplayNameDate != null || groupedItems.GroupByTypeId == (int) Constants.ReportsGroupBy.Date)
                {
                    <td></td>
                }
                <td></td>
                <td></td>
                @if (groupedItems.DisplayNameTimeFrom != null)
                {
                    <td></td>
                }
                @if (groupedItems.DisplayNameTimeTo != null)
                {
                    <td></td>
                }
                <td>
                    <span>@ConvertModelToView.UpdateTimeFormatForValue(groupedItems.TimeTotalFor.TimeActualTotalFor.ToString())</span>
                </td>
                @if (groupedItems.TimeTotalFor.DisplayNameTimeEstimatedTotalFor != null)
                {
                    <td>
                        <span>@(groupedItems.TimeTotalFor.TimeEstimatedTotalFor == 0 ? null : ConvertModelToView.UpdateTimeFormatForValue(groupedItems.TimeTotalFor.TimeEstimatedTotalFor.ToString()))</span>
                    </td>
                }
                @if (groupedItems.DisplayNameNotes != null)
                {
                    <td></td>
                }
            </tr>
            </tbody>
        </table>
    </div>
}
<div class="divIncludeTable">
    <table class="tableEntityHeaders">
        <tr>
            <td style="text-align: left;">
                <span>@Model.ReportTotalView.TimeTotal.DisplayNameTimeActualTotal</span>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <span>@ConvertModelToView.UpdateTimeFormatForValue(Model.ReportTotalView.TimeTotal.TimeActualTotal.ToString())</span>
            </td>
            @if (Model.ReportTotalView.TimeTotal.DisplayNameTimeEstimatedTotal != null)
            {
                <td>
                    <span>@(Model.ReportTotalView.TimeTotal.TimeEstimatedTotal == 0 ? null : ConvertModelToView.UpdateTimeFormatForValue(Model.ReportTotalView.TimeTotal.TimeEstimatedTotal.ToString()))</span>
                </td>
            }
        </tr>
    </table>
</div>
</body>
</html>
